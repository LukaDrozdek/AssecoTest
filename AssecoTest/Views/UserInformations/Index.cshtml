@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Users";
}

<div class="jumbotron">
    <h1 class="text-center" >@ViewData["Title"]</h1>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                Name
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
          
            <th class="text-center">
                 <a class="btn btn-primary " asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
        <tr>
            <td>
                @Model.Rows[i]["Name"]
            </td>
              <td>
                @Model.Rows[i]["Username"]
            </td>
              <td>
                @Model.Rows[i]["Email"]
            </td>
           
            <td class="text-center">
                <a class="btn btn-success" asp-action="AddOrEdit" asp-route-id=" @Model.Rows[i]["Id"]">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id=" @Model.Rows[i]["Id"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
